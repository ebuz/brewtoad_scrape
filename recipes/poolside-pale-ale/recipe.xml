    <HOPS>
      <HOP>
        <NAME>Palisade (US)</NAME>
        <ORIGIN>United States</ORIGIN>
        <ALPHA>7.8</ALPHA>
        <BETA></BETA>
        <AMOUNT>0.0283495</AMOUNT>
