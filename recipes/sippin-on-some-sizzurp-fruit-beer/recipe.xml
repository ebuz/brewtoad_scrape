    <HOPS>
      <HOP>
        <NAME>Cascade (US)</NAME>
        <ORIGIN>United States</ORIGIN>
        <ALPHA>5.9</ALPHA>
        <BETA></BETA>
        <AMOUNT>0.0283495</AMOUNT>
