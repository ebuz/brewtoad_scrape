    <HOPS>
      <HOP>
        <NAME>Bravo (US)</NAME>
        <ORIGIN>United States</ORIGIN>
        <ALPHA>14.6</ALPHA>
        <BETA></BETA>
        <AMOUNT>30.0</AMOUNT>
